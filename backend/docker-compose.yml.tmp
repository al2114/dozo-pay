version: "3"

services:
  web:
    build: ./web
    links:
      - db
    ports:
      - "3000:3000"
    env_file:
      - "./web/.env"
  db:
    image: "postgres:9"
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data/pgdata
    environment:
      POSTGRES_USER: pesto
      POSTGRES_PASSWORD: temp_password
      PGDATA: /var/lib/postgresql/data/pgdata
volumes:
  pgdata: {} 
